<!DOCTYPE html>
<html>
<head>
  <title>Budget Buddy</title>
  <link rel="stylesheet" type="text/css" href="/stylesheets/home.css">
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <!-- FontAwesome -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <!-- JS & Jquery for bootstrap -->
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</head>
<!-- google font -->
<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
<title>Budget Buddy</title>
<style type="text/css">
body{font-family: 'Roboto', sans-serif;}
</style>

<body style="background-color: #E2ECFF;">

  <nav class="navbar navbar-expand-md navbar-dark bg-green">
    <div class="container">
      <img src="/assets/WalletLogo.png" width="30" height="30" style="margin-right: 10px" class="d-inline-block align-top" alt="">

      <%user.forEach(function(result){%>
      <a class="navbar-brand" style="color:white"> Welcome <%= result.firstName %> </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navBar" aria-controls="navBar" aria-expanded="false" aria-label="Toggle navigation">
       <span class="navbar-toggler-icon"></span>
     </button>
  
     <div class="collapse navbar-collapse" id="navBar">
       <ul class="nav navbar-nav ml-auto">
        <li class="nav-item"></li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Settings <i class="fa fa-cog fa-lg" aria-hidden="true"></i>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="#">Update Budget</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="#">Log Out</a>
          </div>
        </li>
      </ul>
    </div>
  </div>
</nav>
<!-- END OF NAVBAR -->

<div class="container-fluid">

  <div class="container">
    <div class="row">
      <div class="col-md-4 offset-md-1" id="left">
        <br><h4>Total Budget: <%= result.currentBudget %></h4>
      </div>
      <div class="col-sm-4 offset-md-2" id="left">
        <br><h4>Remaining Budget: </h4>
      </div>
    </div>
    <br>

    <div class="row">
      <div class="col-xs-1 offset-sm-5" id="button">
        <button type="button" class="btn btn-primary" onClick="openTab(event,'Expenses')" >Expenses</button>
      </div>
      <div class="col-xs-1" id="button">
        <button type="button" class="btn btn-success" onClick="openTab(event,'Goals')" id="defaultOpen">Goals</button>
      </div>
    </div>

    <div class = "row">
      <div class="col-md-4" id="bar">
        <ul class="vertical">
          <li> Today's Date: &nbsp; <span id="show-date" style="font-weight: normal;"></span></li>
          <li> Remaining Budget:  </li>
          <br>
          <li> Total Expense Entries: <%= result.expenses.length %></li>
          <li> Total Amount of Expenses:  </li>
          <br>
          <li> Total Goals Created: <%= result.goals.length %></li>
          <li> Total Goals Completed: </li>
        </ul>
      </div>

      <div class="col-lg-7 offset-md-1 tabcontent" id="Expenses" style="border-color: blue; border-style: solid; border-width: 1px;">
        <br>
        <h3> Expenses </h3>
        <br>
        <form class="form-inline">
          <div class="form-group">
            <input type="text" class="form-control mb-2 mr-sm-2" id="description" placeholder="Description">
          </div>
          <div class="form-group">
            <input type="amount" class="form-control mb-2 mr-sm-2" id="amount" placeholder="0.00" style="width:60px">
          </div>

          <div class="form-group">
                <select class="form-control mb-2 mr-sm-2" id="exampleFormControlSelect1">
                  <option value="" selected disabled>Category</option>
                  <option>Essentials</option>
                  <option>Entertainment</option>
                  <option>Misc.</option>
                </select>
            </div>

          <div class="form-group">
            <input type="date" class="form-control mb-2 mr-sm-2" id="date" style="width:180px">
          </div>
          <button type="submit" class="btn btn-primary mb-2" >Add</button>
        </form>   
        <br>
        <table>
          <tr>
            <th> Description </th>
            <th> Amount </th>
            <th> Category </th>
            <th> Due Date </th>
          </tr>
   
          <% for(var i = 0; i < result.expenses.length; i++){%>
          <tr>
            <td> <%= result.expenses[i].item %> </td>
            <td> <%= result.expenses[i].price %> </td>
            <td> <%= result.expenses[i].category %> </td>
            <td> <%= result.expenses[i].dateOfPurchase %> </td>
          </tr>  
         <% }; %>

        </table>
      </div>

      <div class="col-md-7 offset-md-1 tabcontent" id="Goals" style="border-color: green; border-style: solid; border-width: 1px">
        <br>
        <h3> Goals </h3>
        <br>
        
        <form class="form-inline" action="/home" method="POST">
          <div class="form-group">
            <input type="text" class="form-control mb-2 mr-sm-2" id="description" placeholder="Description">
          </div>
          <div class="form-group">
            <input type="amount" class="form-control mb-2 mr-sm-2" id="amount" placeholder="0.00" style="width:60px">
          </div>
          <div class="form-group">
            <input type="date" class="form-control mb-2 mr-sm-2" id="date" placeholder="MM/DD/YYYY">
          </div>
          <button type="submit" class="btn btn-primary mb-2">Add</button>
        </form>   
        
        <br>

        <table>
          <tr>     
            <th> Description </th>
            <th> Amount </th>
            <th> Due Date </th>
          </tr>
          <% for(var i = 0; i < result.goals.length; i++){%>
          <tr>
            <td> <%= result.goals[i].description %> </td>
            <td> <%= result.expenses[i].amount %> </td>
            <td> <%= result.expenses[i].date %> </td>
          </tr>  
         <% }; %>
        </table>

      </div>
    </div>

  </div>
     <%});%>
<!-- END OF MAIN USER PAGE -->
  <script type="text/javascript" src="/js/home.js"></script>
</body>
</html>